<nav aria-label="Table Paging" class="my-3">
    <ul class="pagination justify-content-end mb-0">
      <li class="page-item" id="prev"><a class="page-link" href="#">Previous</a></li>
      <li class="page-item"><a class="page-link" href="/product/filter?page=1">1</a></li>
      <li class="page-item"><a class="page-link" href="/product/filter?page=2">2</a></li>
      <li class="page-item"><a class="page-link" href="/product/filter?page=3">3</a></li>
      <li class="page-item" id="next"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>
<script>
   
    $('#next').click(function() {
      console.log('click');
      const queryString = new URLSearchParams(window.location.search);
      const query = (queryString.get("page")) ? "?" : "product/filter?";
      const pageValue = Number(queryString.get("page")) || 1;
      const nextPage = pageValue + 1;
      queryString.set("page", nextPage);
      const newUrl = window.location.pathname + query + queryString.toString();
      window.location.href = newUrl;
  });
  $('#prev').click(function() {
      console.log('click');
      const queryString = new URLSearchParams(window.location.search);
      const query = (queryString.get("page")) ? "?" : "product/filter?";
      const pageValue = Number(queryString.get("page")) || 1;
      const nextPage = (pageValue > 1) ? pageValue - 1 : 1;
      queryString.set("page", nextPage);
      const newUrl = window.location.pathname + query + queryString.toString();
      window.location.href = newUrl;
  });
</script>