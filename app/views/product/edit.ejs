<link rel="stylesheet" href="/styles/create-product.css" />
<main role="main" class="main-content">
  <div>
    <h4 class="card-title text-center">Cập nhật phẩm mới</h4>
  </div>
  <form
    class="pt-3 border-top border-secondary"
    action="/product/edit/<%= product.ID %>"
    method="post"
    enctype="multipart/form-data"
    id="form-create-new-product"
    >
    <div class="form-group">
      <label for="exampleFormControlInput1">Tên sản phẩm</label>
      <input
        type="text"
        class="form-control"
        id="exampleFormControlInput1"
        name="name" value="<%= product.NAME %>"
        required />
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Mô tả sản phẩm</label>
      <textarea
        class="form-control"
        id="exampleFormControlTextarea1"
        name="des"
        required 
        rows="3"><%= product.DES %></textarea>
    </div>
    <div class="form-group">
      <label for="form-update-image">Hình ảnh minh họa</label>
      <div class="file-upload">
        <button
          class="file-upload-btn btn-primary"
          type="button"
          onclick="$('.file-upload-input').trigger( 'click' )">
          Thêm hình ảnh
        </button>
        <div class="image-upload-wrap border-primary" hidden>
          <input
            class="file-upload-input"
            id="form-update-image"
            type="file"
            name="image"
            onchange="readURL(this);"
            accept="image/*" />
          <div class="drag-text">
            <h3>Kéo/Thả</h3>
          </div>
        </div>
        <div class="file-upload-content" style="display: block;">
          <img class="file-upload-image" src=<%= product.THUMBNAIL %> alt="your image" />
          <div class="image-title-wrap">
            <button type="button" onclick="removeUpload()" class="remove-image">
              Loại bỏ
            </button>
          </div>
        </div>
      </div>
    </div>

    <input type="hidden" name="thumbnailId" value="<%= product.THUMBNAIL_ID %>">
    <div class="pt-3">
      <button type="submit" class="btn btn-primary">Xác nhận</button>
    </div>
  </form>
</main>
<%-include('../components/spin') %>

<script src="/js/create-product.js"></script>

