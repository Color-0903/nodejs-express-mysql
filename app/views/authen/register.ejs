<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-5">
            <div class="card text-center bg-light" style="min-height: 50vh">
                <form class="card-body" method="post">
                    <h1 class="card-title mb-1 text-primary">Đăng ký</h1>
                    <hr>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control"
                            id="nameRegister" aria-describedby="nameHelp"
                            name="name" placeholder="Tên đăng nhập"
                            required>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control"
                            id="passRegister" aria-describedby="nameHelp"
                            name="password" placeholder="Mật khẩu"
                            required>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control"
                            id="passRegister" aria-describedby="nameHelp"
                            name="passConfirm" placeholder="Nhập lại mật khẩu"
                            required>
                    </div>
                    <a href="/auth/google"
                        class="btn btn-danger btn-lg d-block mt-3"><i
                            class="fa-brands fa-google-plus-g"></i> Login with
                        Google</a>
                        <p class="mt-1 text-secondary" style="text-align: left;">Bạn có tài khoản?<a href="/authen/login"> Đăng nhập</a></p>
                    <div class="form-group mt-3" style="text-align: left;">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
