<div class="pb-5" style="padding-bottom: 40px;">
    <div class="col-12 bg-white">
      <h1 class="text-center py-4 text-primary">Giỏ hàng</h1>
    </div>
    <section class="container bg-light">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col">
          <div class="card mt-4">
            <div class="card-body p-4">
              <% if (carts.length <= 0) { %>
                <div class="card mb-2">
                  <h2 class="text-center text-warning">Giỏ hàng trống !!</h2>
                </div>
              <% } else { %>
                <div class="row">
                  <div class="col-lg-7">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <h4>Giỏ hàng</h4>
                      </div>
                      <div>
                        <p class="mb-0"><span class="text-muted">Số lượng (<%= carts.length %>)</p>
                        </div>
                      </div>
                      <% carts.forEach(function(item) { %>
                        <div class="card mb-2">
                          <div class="card-body">
                            <div class="d-flex justify-content-between">
                              <div class="d-flex flex-row align-items-center">
                                <div>
                                  <img
                                    src='<%= item.THUMBNAIL %>'
                                    class="img-fluid rounded-3" alt=".."
                                    style="width: 65px;">
                                </div>
                                <div class="ms-3">
                                  <h5><%= item["NAME"] %></h5>
                                  <p class="small mb-0 limit-text"><%= item["DES"] %> </p>
                                </div>
                              </div>
                              <div class="d-flex flex-row align-items-center justify-content-between ms-3" style="flex: 1">
                                <div style="width: 50px;">
                                  <P class="fw-normal mb-0">
                                    <% item.size.forEach(function(size) { %>
                                      <%= size["size"] %>(<%= size["quantity"] %>)
                                    <% }); %>
                                  </P>
                                </div>
                                <div style="width: 80px;">
                                  <h6 class="mb-0 text-nowrap"><%= item["price"] %> (VNĐ)</h6>
                                </div>
                                <a href="/cart/remove/<%= item['ID'] %>" class="nav-link link-danger"><i
                                    class="fas fa-trash-alt"></i></a>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% }); %>
                    </div>
                        <div class="col-lg-5">
                          <div class="card rounded-3 cart-checkout bg-dark text-white">
                            <div class="card-body">
                              <div
                                class="d-flex justify-content-between align-items-center mb-4">
                                <h4 class="mb-0">Thanh toán</h4>
                              </div>
                              <form class="mt-4" method="POST" action="/cart/checkout">
                                <div class="form-outline form-white mb-4">
                                  <input type="text" id="typeName"
                                    class="form-control form-control-lg" size="17"
                                    placeholder="Họ Tên" name="fullName" required value="<%= data.fullName ? data.fullName : ''%>"/>
                                </div>
                                <div class="form-outline form-white mb-4">
                                  <input type="text" id="typeText"
                                    class="form-control form-control-lg" size="17"
                                    placeholder="Số điện thoại" minlength="9"
                                    maxlength="13" name="phone" required value="<%= data.phone ? data.phone : ''%>"/>
                                </div>
                                <div class="form-outline form-white mb-4">
                                  <input type="text" id="typeAddress"
                                    class="form-control form-control-lg" size="17"
                                    placeholder="Địa chỉ" minlength="10" name="address" 
                                    required value="<%= data.address ? data.address : ''%>"/>
                                </div>
                                <div class="form-outline form-white mb-4">
                                  <input type="text" id="typeNote"
                                    class="form-control form-control-lg" size="17"
                                    placeholder="Ghi chú" minlength="0" name="note" />
                                </div>
                                <hr class="my-4">
        
                                <div class="d-flex justify-content-between">
                                  <p class="mb-2">Tiền hàng:</p>
                                  <p class="mb-2"><%= totalPrice %> (vnđ)</p>
                                </div>
        
                                <div class="d-flex justify-content-between">
                                  <p class="mb-2">Vận chuyển:</p>
                                  <p class="mb-2">15000 (vnđ)</p>
                                </div>
        
                                <div class="d-flex justify-content-between mb-4">
                                  <p class="mb-2">Thành tiền: </p>
                                  <p class="mb-2"><%= totalPrice + Number(15000) %> (vnđ)</p>
                                  <input type="hidden" name="totalPrice" value="<%= totalPrice + Number(15000) %>">
                                </div>
        
                                <button type="submit"
                                  class="btn btn-primary btn-block btn-lg">
                                  <div class="d-flex justify-content-between">
                                    <span>Thanh toán <i
                                        class="fa-regular fa-circle-check"></i></span>
                                  </div>
                                </button>
                              </form>
        
                            </div>
                          </div>
                        </div>
                  </div>
              <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  